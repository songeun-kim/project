*{margin:0px; padding:0px; text-decoration:none; font-family:sans-serif;}
body{background-color: rgb(44, 46, 63);}

/* 로그인페이지 */
.loginForm{position:absolute; top:50%; left:50%;
width:350px; height:450px; transform: translate(-50%, -50%);
padding:30px,20px; background-color:white; text-align: center;
border-radius:15px;}
.loginForm>h2{text-align: center; margin:30px;}
.idForm{border-bottom:2px solid #adadad; margin:30px; padding: 10px 10px;}
.passForm{border-bottom:2px solid #adadad; margin:30px; padding :10px 10px;}
.id{width:100%; border:none; outline:none; color:#636e72; font-size:16px;
height:25px; background: none;}
.pw{width:100%; border:none; color:#636e72; font-size: 16px;
height:25px; background: none;}
.login_failed{color: red; font-weight: bold; font-size: 18px;}
.btn{ position: absolute; left:30px; width:80%; height:50px; 
background:linear-gradient(125deg, #81ecec,#6c5ce7,#81ecec);
background-size:200%; color:white; font-weight:bold; border :none;
cursor: pointer; transition:0.4s; display:inline;}
.btn:hover{background-position: right;}
.bottom_text{position:relative;text-align: center; padding-top: 60px;}

/*로그인 성공 페이지*/
.login_success{margin-top:70px;margin-bottom:30px; padding: 10px 10px;
position: relative; }
.bottom_logout{position: relative; margin-top: 100px;}
.bottom_logout>a{color:rgb(36,44,44);font-weight: bold;}
















/*회원가입 페이지*/
.join_form{background-color: white; position:absolute; top:50%; left:50%;
width:500px; height:650px;transform:translate(-50%,-50%); 
border-radius: 15px;}
.join_top img{width:250px;height:160px; margin-top: 10px;margin-left: 125px;}
.join_top>h2{margin-bottom: 10px;text-align: center;}
.join_information>h3{text-align: center;}
.information{padding-top: 5px;}
