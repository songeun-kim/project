/*회원가입 form*/
.form_i{padding: 5px; float:left;width:470px;margin-bottom: 13px;}
.form_i>label{float:left; width: 20%; padding-left: 15px;}

.form-control{width:100%; border:none; outline:none; color:#636e72; font-size:16px;
    height:25px; background: none;float:left;}
.form-control{border-bottom:2px solid #adadad; width: 70% }


.submit_button{ position: absolute; left:30px; top:575px; width:50%; height:50px; 
    background:linear-gradient(125deg, #8effff,#817bad,#8195ec);
    background-size:200%; color:white; font-weight:bold; border :none;
    cursor: pointer; transition:0.4s; display:inline; margin-left: 100px;}
.submit_button:hover{background-position: right;}
