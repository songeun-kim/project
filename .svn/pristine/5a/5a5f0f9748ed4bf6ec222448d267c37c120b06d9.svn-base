
/* section table */
#score_table {position:absolute;left:250px; top:200px;}
.table_back {background-color: white; width: 700px; height: 400px;
             padding: 20px; box-shadow: 0px 3px 2px #aab2bd; padding:10px}
.table_back h4 {font-size: 30px; margin: 10px;}
hr { margin-top: 20px; margin-bottom: 20px; border-top:1px solid #797979}
.table {width: 100%; padding: 10px; margin: 10px; border-color: grey; }
.table>thead>tr>th {padding: 5px; margin-bottom: 10px; font-size: 22px;}
.table>tbody>tr>td {padding: 10px; font-size: 20px;}

#click_btn {   font-size: 18px; position: absolute; top:640px; left:480px; clear: left;}
#click_btn>button{color:white;}


/* section chart */
#chart_main { position:absolute; top:150px;left:1100px;clear: both;}
.container1 {width: 600px; height: 600px; display:block;}
.container2 {width: 600px; height: 600px; display:none;}
#insert { cursor: pointer; background-color:  rgb(44, 46, 63); border-color:  rgb(25, 26, 41);
    border-radius: 10px;  font-size: 18px; padding: 10px;
    padding-left: 20px; padding-right: 20px; margin-right: 10px;}
#update { cursor: pointer; background-color:  rgb(44, 46, 63); border-color:  rgb(25, 26, 41);
    border-radius: 10px;  font-size: 18px; padding: 10px;
    padding-left: 20px; padding-right: 20px; margin-right: 10px;}


