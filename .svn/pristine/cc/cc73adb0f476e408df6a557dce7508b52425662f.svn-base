<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.replyMapper">

<!-- 댓글 조회 -->
<select id="replyList" parameterType="int" resultType="co.kr.playbowling.vo.ReplyVO">
	select
		rnum, bnum, writer, content, regDate
	from reply
		where bnum = #{bnum}		
</select>

<!-- 댓글 작성 -->
<insert id="replyWrite" parameterType="co.kr.playbowling.vo.ReplyVO">
	insert into reply(bnum, writer, content, regDate)
		value(#{bnum}, #{writer}, #{content}, #{regDate})
</insert>
	
<!-- 댓글 수정 -->
<update id="replyModify" parameterType="co.kr.playbowling.vo.ReplyVO">
	update reply 
	set
		writer = #{writer},
		content = #{content}
	where rnum = #{rnum}
		and bnum = #{bnum}	
</update>

<!-- 댓글 삭제 -->
<delete id="replyDelete" parameterType="co.kr.playbowling.vo.ReplyVO">
	delete from reply
	where rnum = #{rnum}
		and bnum = ${bnum}	
</delete>
	
</mapper>